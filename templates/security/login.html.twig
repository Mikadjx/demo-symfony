{% extends 'base.html.twig' %}

{% block title %}Connexion ‚Äî La Petite Maison de l'√âpouvante{% endblock %}

{% block stylesheets %}
<style>
  @import url('https://fonts.googleapis.com/css2?family=Cinzel:wght@400;600;700&family=Crimson+Text:ital,wght@0,400;0,600;1,400&display=swap');

  :root {
    --noir: #0a0a0b;
    --charbon: #111114;
    --cendre: #1c1c21;
    --sang: #8b1a1a;
    --sang-vif: #c0392b;
    --or: #c9a84c;
    --or-pale: #e8d5a3;
    --texte: #d4cfc8;
    --texte-pale: #7a7570;
  }

  .login-bg {
    position: fixed;
    inset: 0;
    z-index: 0;
    background:
      radial-gradient(ellipse 80% 60% at 20% 80%, rgba(139,26,26,0.12) 0%, transparent 60%),
      radial-gradient(ellipse 60% 40% at 80% 20%, rgba(201,168,76,0.06) 0%, transparent 50%),
      var(--noir);
  }

  .login-bg::before {
    content: '';
    position: absolute;
    inset: 0;
    background-image:
      repeating-linear-gradient(
        0deg,
        transparent,
        transparent 2px,
        rgba(255,255,255,0.008) 2px,
        rgba(255,255,255,0.008) 4px
      );
    pointer-events: none;
  }

  .login-wrapper {
    position: relative;
    z-index: 1;
    flex: 1;
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 2rem 1rem;
    min-height: calc(100vh - 60px);
  }

  .login-card {
    width: 100%;
    max-width: 420px;
    background: linear-gradient(145deg, var(--charbon), var(--cendre));
    border: 1px solid rgba(201,168,76,0.2);
    border-radius: 2px;
    padding: 3rem 2.5rem;
    box-shadow:
      0 0 0 1px rgba(0,0,0,0.8),
      0 32px 64px rgba(0,0,0,0.6),
      0 0 80px rgba(139,26,26,0.08),
      inset 0 1px 0 rgba(255,255,255,0.04);
    animation: cardReveal 0.8s cubic-bezier(0.16, 1, 0.3, 1) both;
  }

  @keyframes cardReveal {
    from { opacity: 0; transform: translateY(24px) scale(0.98); }
    to   { opacity: 1; transform: translateY(0) scale(1); }
  }

  .login-header {
    text-align: center;
    margin-bottom: 2.5rem;
    animation: fadeUp 0.6s 0.2s both;
  }

  @keyframes fadeUp {
    from { opacity: 0; transform: translateY(12px); }
    to   { opacity: 1; transform: translateY(0); }
  }

  .login-ornament {
    display: block;
    font-size: 2.5rem;
    margin-bottom: 1rem;
    filter: drop-shadow(0 0 12px rgba(139,26,26,0.6));
    animation: pulse 3s ease-in-out infinite;
  }

  @keyframes pulse {
    0%, 100% { filter: drop-shadow(0 0 12px rgba(139,26,26,0.6)); }
    50%       { filter: drop-shadow(0 0 20px rgba(192,57,43,0.8)); }
  }

  .login-header h1 {
    font-family: 'Cinzel', serif;
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--or-pale);
    letter-spacing: 0.15em;
    text-transform: uppercase;
    margin-bottom: 0.5rem;
  }

  .login-header p {
    font-size: 0.95rem;
    color: var(--texte-pale);
    font-style: italic;
    letter-spacing: 0.05em;
  }

  .divider {
    display: flex;
    align-items: center;
    gap: 1rem;
    margin-bottom: 2rem;
    animation: fadeUp 0.6s 0.3s both;
  }

  .divider::before,
  .divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: linear-gradient(to right, transparent, rgba(201,168,76,0.3), transparent);
  }

  .divider-icon {
    color: var(--or);
    font-size: 0.7rem;
    opacity: 0.6;
  }

  .alert {
    background: rgba(139,26,26,0.2);
    border: 1px solid rgba(192,57,43,0.4);
    border-left: 3px solid var(--sang-vif);
    color: #e88080;
    padding: 0.85rem 1rem;
    border-radius: 2px;
    font-size: 0.9rem;
    margin-bottom: 1.5rem;
    animation: shake 0.4s ease;
  }

  @keyframes shake {
    0%, 100% { transform: translateX(0); }
    25%       { transform: translateX(-4px); }
    75%       { transform: translateX(4px); }
  }

  .form-group {
    margin-bottom: 1.4rem;
    animation: fadeUp 0.6s both;
  }

  .form-group:nth-child(1) { animation-delay: 0.35s; }
  .form-group:nth-child(2) { animation-delay: 0.45s; }

  .form-group label {
    display: block;
    font-family: 'Cinzel', serif;
    font-size: 0.7rem;
    font-weight: 600;
    letter-spacing: 0.12em;
    text-transform: uppercase;
    color: var(--or);
    margin-bottom: 0.5rem;
    opacity: 0.85;
  }

  .form-group input {
    width: 100%;
    background: rgba(0,0,0,0.4);
    border: 1px solid rgba(201,168,76,0.15);
    border-radius: 2px;
    padding: 0.85rem 1rem;
    color: var(--texte);
    font-family: 'Crimson Text', serif;
    font-size: 1rem;
    outline: none;
    transition: all 0.25s ease;
  }

  .form-group input::placeholder {
    color: var(--texte-pale);
    opacity: 0.5;
  }

  .form-group input:focus {
    border-color: rgba(201,168,76,0.5);
    background: rgba(0,0,0,0.6);
    box-shadow: 0 0 0 3px rgba(201,168,76,0.08), inset 0 1px 3px rgba(0,0,0,0.3);
  }

  .form-check {
    display: flex;
    align-items: center;
    gap: 0.6rem;
    margin-bottom: 2rem;
    animation: fadeUp 0.6s 0.5s both;
  }

  .form-check input[type="checkbox"] {
    appearance: none;
    width: 16px;
    height: 16px;
    border: 1px solid rgba(201,168,76,0.3);
    background: rgba(0,0,0,0.4);
    border-radius: 1px;
    cursor: pointer;
    flex-shrink: 0;
    position: relative;
    transition: all 0.2s ease;
  }

  .form-check input[type="checkbox"]:checked {
    background: var(--sang);
    border-color: var(--sang-vif);
  }

  .form-check input[type="checkbox"]:checked::after {
    content: '‚úì';
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    color: white;
    font-size: 10px;
    font-weight: bold;
  }

  .form-check label {
    font-size: 0.9rem;
    color: var(--texte-pale);
    cursor: pointer;
    font-style: italic;
  }

  .btn-login {
    width: 100%;
    padding: 1rem;
    background: linear-gradient(135deg, var(--sang) 0%, #6b1515 100%);
    border: 1px solid rgba(192,57,43,0.5);
    border-radius: 2px;
    color: var(--or-pale);
    font-family: 'Cinzel', serif;
    font-size: 0.8rem;
    font-weight: 600;
    letter-spacing: 0.2em;
    text-transform: uppercase;
    cursor: pointer;
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
    animation: fadeUp 0.6s 0.55s both;
  }

  .btn-login::before {
    content: '';
    position: absolute;
    top: 0; left: -100%;
    width: 100%; height: 100%;
    background: linear-gradient(90deg, transparent, rgba(255,255,255,0.08), transparent);
    transition: left 0.5s ease;
  }

  .btn-login:hover {
    background: linear-gradient(135deg, var(--sang-vif) 0%, var(--sang) 100%);
    box-shadow: 0 4px 20px rgba(139,26,26,0.4), 0 0 40px rgba(139,26,26,0.15);
    transform: translateY(-1px);
  }

  .btn-login:hover::before { left: 100%; }
  .btn-login:active { transform: translateY(0); }

  .login-footer {
    text-align: center;
    margin-top: 1.8rem;
    padding-top: 1.5rem;
    border-top: 1px solid rgba(255,255,255,0.05);
    animation: fadeUp 0.6s 0.65s both;
  }

  .login-footer a {
    color: var(--texte-pale);
    text-decoration: none;
    font-size: 0.88rem;
    font-style: italic;
    letter-spacing: 0.05em;
    transition: color 0.2s ease;
  }

  .login-footer a:hover { color: var(--or); }

  .site-footer {
    position: relative;
    z-index: 1;
    text-align: center;
    padding: 1.5rem;
    color: var(--texte-pale);
    font-size: 0.8rem;
    font-style: italic;
    border-top: 1px solid rgba(255,255,255,0.04);
    opacity: 0.6;
  }
</style>
{% endblock %}

{% block body %}

<div class="login-bg"></div>

<div class="login-wrapper">
